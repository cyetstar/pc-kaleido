{
  "name": "base_app_v3-pc",
  "version": "0.0.1",
  "scripts": {
    "dev": "vite",
    "serve": "npm run dev",
    "build": "vite build --mode production",
    "build:client": "vite build --mode client",
    "build:development": "vite build --mode development",
    "prepare": "husky install",
    "preview": "yarn build && vite preview",
    "preview:test": "yarn build:test && vite preview",
    "report": "cross-env REPORT=true npm run build",
    "lint:lint-staged": "lint-staged",
    "lint:eslint": "eslint --cache --max-warnings 0  \"{src,mock}/**/*.{vue,ts,tsx}\" --fix",
    "lint:prettier": "prettier --write  \"src/**/*.{js,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/"
  },
  "dependencies": {
    "@ant-design/icons-vue": "^6.0.1",
    "@ht/util": "^1.0.0",
    "@ht/http": "^1.0.3",
    "ansi_up": "^6.0.2",
    "ant-design-vue": "3.2.10",
    "axios": "^0.25.0",
    "echarts": "^5.4.1",
    "hta-ui": "^1.2.3",
    "js-cookie": "^3.0.1",
    "lodash": "^4.17.21",
    "lodash-es": "^4.17.21",
    "mockjs": "^1.1.0",
    "nprogress": "^0.2.0",
    "pinia": "^2.0.11",
    "pinia-plugin-persistedstate": "^1.3.0",
    "qs": "^6.10.3",
    "sm-crypto": "^0.3.7",
    "vue": "^3.2.47",
    "vue-echarts": "^6.5.2",
    "vue-router": "4"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/js-cookie": "^3.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^20.10.0",
    "@types/nprogress": "^0.2.0",
    "@types/qs": "^6.9.7",
    "@types/sm-crypto": "^0.3.0",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "@vitejs/plugin-legacy": "^5.2.0",
    "@vitejs/plugin-vue": "^4.5.1",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "@vue/compiler-sfc": "^3.2.30",
    "autoprefixer": "^10.4.2",
    "consola": "^2.15.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-define-config": "^1.2.3",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.4.0",
    "husky": "^7.0.0",
    "less": "^4.1.2",
    "lint-staged": "^12.3.3",
    "postcss": "8.4.6",
    "postcss-html": "^1.3.0",
    "postcss-less": "^6.0.0",
    "prettier": "^2.5.1",
    "rollup": "^2.67.1",
    "rollup-plugin-visualizer": "^5.5.4",
    "stylelint": "^14.3.0",
    "stylelint-config-html": "^1.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recess-order": "^3.0.0",
    "stylelint-config-standard": "^24.0.0",
    "stylelint-order": "^5.0.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.4",
    "vite-plugin-mkcert": "^1.5.2",
    "vite-plugin-mock": "^2.9.6",
    "vite-plugin-style-import": "^2.0.0",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vite-plugin-windicss": "^1.9.2",
    "vue-tsc": "^1.4.2",
    "vue-types": "5.0.2",
    "windicss": "^3.5.6"
  },
  "engines": {
    "node": ">=14"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
